@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">University Management Platform</h1>
        <p class="lead mt-3">
            A centralized system for managing courses, students, teachers, and enrollments.
        </p>
    </div>

    <hr class="my-4" />

    <div class="row text-center mt-4">
        <div class="col-md-4">
            <h4>Courses</h4>
            <p>
                Create, edit, and manage courses, assign teachers, and organize academic programs.
            </p>
            <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary">
                View Courses
            </a>
        </div>

        <div class="col-md-4">
            <h4>Teachers</h4>
            <p>
                Manage teaching staff, academic ranks, and assigned courses.
            </p>
            <a asp-controller="Teachers" asp-action="Index" class="btn btn-outline-primary">
                View Teachers
            </a>
        </div>

        <div class="col-md-4">
            <h4>Students</h4>
            <p>
                Register students, track enrollments, and manage academic progress.
            </p>
            <a asp-controller="Students" asp-action="Index" class="btn btn-outline-primary">
                View Students
            </a>
        </div>
    </div>

    <div class="text-center mt-5">
        <p class="text-muted">
            Developed using ASP.NET Core MVC & Entity Framework Core
        </p>
    </div>
</div>
